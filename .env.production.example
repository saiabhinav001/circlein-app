# CircleIn Production Configuration
# Add these to your .env.local file to force production-ready behavior

# PRODUCTION OVERRIDE: Set to true to completely disable index validation
NEXT_PUBLIC_FORCE_PRODUCTION_MODE=true

# DISABLE INDEX WARNINGS: Set to true to hide all index setup guides
NEXT_PUBLIC_DISABLE_INDEX_WARNINGS=true

# DEBUG MODE: Set to false in production
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=false

# AUTO RETRY: Enable automatic retries for temporary failures
NEXT_PUBLIC_ENABLE_AUTO_RETRY=true

# Firebase Project Configuration (already in your .env.local)
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=circlein-f76c1
# NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
# etc...

# Note: Since your Firebase indexes are already set up and working,
# setting NEXT_PUBLIC_FORCE_PRODUCTION_MODE=true will completely
# eliminate any false index warnings.